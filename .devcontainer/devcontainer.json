{
    "name": "ros_docker",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--network=host",
        "--ipc=host",
        "--ulimit=rtprio=99",
        "--ulimit=memlock=-1",
        "--env=DISPLAY",
        "--volume=/tmp/.X11-unix:/tmp/.X11-unix:rw",
        "--env=QT_X11_NO_MITSHM=1",
        "--volume=/dev/bus/usb:/dev/bus/usb"
    ],
    "workspaceFolder": "/ros_ws",
    "privileged": true,
    "mounts": [
        "source=./src,target=/ros_ws/src,type=bind,consistency=cached"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "charliermarsh.ruff",
                "ms-vscode.cpptools-extension-pack",
                "llvm-vs-code-extensions.vscode-clangd",
                "twxs.cmake",
                "vadimcn.vscode-lldb",
                "ms-iot.vscode-ros",
                "smilerobotics.urdf",
                "tamasfe.even-better-toml",
                "timonwong.shellcheck",
                "yzhang.markdown-all-in-one"
            ],
            "settings": {
                "files.associations": {
                    "*.rviz": "yaml",
                    "*.srdf": "xml",
                    "*.urdf": "xml",
                    "*.xacro": "xml"
                }
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {}
      },
      "portsAttributes": {
        "6080": {
          "label": "Desktop (Web)"
        }
      }
}
